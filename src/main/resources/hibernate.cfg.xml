<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/testhibernate</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <mapping resource="com/hcs/entity/AcctAuthority.hbm.xml" />
        <mapping resource="com/hcs/entity/AcctUserRole.hbm.xml" />
        <mapping resource="com/hcs/entity/AcctUser.hbm.xml" />
        <mapping resource="com/hcs/entity/AcctRoleAuthority.hbm.xml" />
        <mapping resource="com/hcs/entity/AcctRole.hbm.xml" />
    </session-factory>
</hibernate-configuration>
